                            <option>Livré</option>
                            <option>Annulé</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label>Date</label>
                        <input type="date" class="form-control">
                    </div>
                </div>
                <div class="col-md-2">
                    <label>&nbsp;</label>
                    <button type="button" class="btn btn-secondary btn-block">
                        <i class="feather icon-search"></i> Filtrer
                    </button>
                </div>
            </div>

