                            <td>
                                <a href="#" class="btn btn-sm btn-info">Voir</a>
                            </td>
                        </tr>
                        <tr>
                            <td>20/12/2025</td>
                            <td>Retour</td>
                            <td>18:00</td>
                            <td><span class="badge badge-danger">Refusé</span></td>
                            <td>
                                <a href="#" class="btn btn-sm btn-info">Voir</a>
                            </td>
                        </tr>
